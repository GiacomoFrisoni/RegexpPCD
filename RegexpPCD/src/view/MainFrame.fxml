<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.geometry.Insets?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" type="VBox" stylesheets="@style.css" spacing="15">
	<fx:define>
		<Double fx:id="smallWidth" fx:value="100" />
	</fx:define>
	
	<padding>
		<Insets bottom="10.0" left="10.0" right ="10.0" top="10.0"/>
	</padding>
	
	
	<HBox spacing="20" alignment="BOTTOM_CENTER">
		<VBox HBox.hgrow="ALWAYS">
			<Label text="Path"></Label>
			<TextField fx:id="path" promptText="Path to the folder"></TextField>
		</VBox>
		<Button prefWidth="$smallWidth" maxWidth="$smallWidth" minWidth="$smallWidth" fx:id="choosePath">...</Button>
	</HBox>
	
	
	
	<HBox spacing="20">
		<VBox HBox.hgrow="ALWAYS">
			<Label text="Regular Expression"></Label>
			<TextField fx:id="regularExpression" promptText="Regular Expression"></TextField>
		</VBox>
		
		<VBox prefWidth="$smallWidth" maxWidth="$smallWidth" minWidth="$smallWidth">
			<Label text="Depth"></Label>
			<TextField fx:id="depth">1</TextField>
		</VBox>
	</HBox>
	
	<VBox alignment="CENTER" spacing="5">
		<padding>
			<Insets bottom="0.0" left="0.0" right ="0.0" top="15.0"/>
		</padding>
		<Button fx:id="startStop" id="specialButton">Start Searching</Button>
		<Label fx:id="errorLabel" id="errorLabel" text="Random error" visible="false"></Label>
	</VBox>


</fx:root>

